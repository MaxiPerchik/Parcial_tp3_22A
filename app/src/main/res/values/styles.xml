<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImage" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="backgroundColor">@color/white</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
    </style>

    <style name="ProrofileTopCornerRadious" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CardRadius" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="CustomSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb_selector_day</item>
        <item name="android:track">@drawable/switch_track_selector_day</item>
    </style>

    <style name="CustomSwitchSearch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:thumb">@drawable/search_switch_thumb_selector</item>
        <item name="android:track">@drawable/search_switch_track_selector</item>
    </style>

    <style name="CustomSwitchNight" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb_selector_night</item>
        <item name="android:track">@drawable/switch_track_selector_night</item>
    </style>

</resources>