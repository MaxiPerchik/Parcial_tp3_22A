<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/limited_offer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_corner_background"
            android:padding="4dp"
            android:text="LIMITED OFFER!"
            android:textColor="@color/white"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/offer_favorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/offer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/limited_offer_label"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="@string/offer_title_text_visa"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/offer_image"
            android:layout_width="84dp"
            android:layout_height="80dp"
            android:layout_below="@id/offer_title"
            android:layout_alignParentStart="true"
            android:src="@drawable/tarjeta_visa" />

        <TextView
            android:id="@+id/offer_description"
            android:layout_width="263dp"
            android:layout_height="70dp"
            android:layout_alignTop="@id/offer_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="44dp"
            android:layout_toEndOf="@id/offer_image"
            android:textColor="@color/flight_intermedian_gray"
            android:text="@string/offer_text_visa"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <ImageView
            android:id="@+id/offer_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/offer_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-46dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/arrow_next" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
